<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.GameShop.dao.RegisterUserDao">

    <select id="checkUserEmail" resultType="int">
        select COUNT(*) from user
        <where>
            email = #{email}
        </where>
    </select>

    <!--用户名 邮箱 密码 手机 注册时间-->
    <insert id="registerUser">
        INSERT INTO USER(name,password,email,photo,sex,birthdate,phone,regTime,logTime,signature,balance,status) VALUES
       (#{name},#{password},#{email},'img/userTx/default.jpeg','2','2000-01-01',#{phone},#{regTime},'2000-01-01','无','0','0');

    </insert>
</mapper>